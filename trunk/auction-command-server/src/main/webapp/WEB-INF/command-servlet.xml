<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="auctionCommandService" class="org.fuin.auction.command.server.AuctionCommandServiceImpl" />		

	<bean name="/AuctionCommandService"
		class="org.springframework.remoting.caucho.HessianServiceExporter">
		<property name="service" ref="auctionCommandService" />
		<property name="serviceInterface" value="org.fuin.auction.command.api.AuctionCommandService" />
	</bean>

</beans>